##############################################################################
##
## Title-
##       (~/src/py/site-packages/lib/)Makefile.STD
##
## Purpose-
##       Python build control makefile
##
## Last change date-
##       2024/03/01
##
## Implementation notes-
##       This Makefile is intended to run from ~/obj/py/site-packages/lib/.
##
##############################################################################

##############################################################################
## Default action
.PHONY: list-options
list-options: ;
	@echo "Available options:"
	@echo "  make install: Builds and installs in Python's site-packages/."
	@echo "    Use this to initialize or update your installation."
	@echo "  make uninstall: Removes installation from Python's site-packages/."
	@echo "  make reinstall: (make uninstall; make install)"
	@echo "  make update: Update an installation."
	@echo
	@echo "  make check: Compile and run all test suites."
	@echo "  make compile: Compile all source files."
	@echo
	@echo "  make clean: Removes build 'make install' files from this directory."
	@echo "  make pristine: Runs 'make uninstall' and 'make clean'"
	@echo

##############################################################################
## $SDL_ROOT is the base directory, containing
##    ./bat ./bin ./src/cpp/lib and ./obj/cpp/lib/.
## $SDL_ROOT/obj/py/site-packages/lib must be the current (invoking) directory.
ifeq "" "$(SDL_ROOT)"
SDL_ROOT := ../../../..
endif

##############################################################################
## Local variables:
RDCONFIG := $(SDL_ROOT)/bat/sys/rdconfig

site := src/py/site-packages/lib
want := $(shell $(RDCONFIG) $(SDL_ROOT)/bat/sys/.want-version $(site))
have := $(shell $(RDCONFIG) ./.have-version $(site))

##############################################################################
## TARGETS: check, compile, install, reinstall, uninstall
.PHONY: check compile install reinstall uninstall

##----------------------------------------------------------------------------
check: ;
	@echo; echo; echo "No available tests"
	@echo "** site-packages/lib check completed OK **"

##----------------------------------------------------------------------------
compile: ;
	@echo; echo; echo "No available compile test. Use 'make install'"
	@echo "** site-packages/lib compile completed OK **"

##----------------------------------------------------------------------------
install: ;
	pip install .
	echo $(site) = $(want) >.have-version
	@echo "** site-packages/lib install completed OK **"

##----------------------------------------------------------------------------
reinstall: uninstall install
	@echo "** reinstall completed OK **"

##----------------------------------------------------------------------------
uninstall: ;
	pip uninstall lib
	@rm -f .have-version
	@rm -Rf build lib.egg-info
	@echo "** site-packages/lib uninstall completed OK **"

##----------------------------------------------------------------------------
update: is-up-to-date install

##############################################################################
## TARGETS: is-up-to-date make-up-to-date
.PHONY: is-up-to-date make-up-to-date
is-up-to-date: ;

ifneq "$(have)" "$(want)"
is-up-to-date: make-up-to-date
endif

make-up-to-date: ;
	@echo make-up-to-date have $(have), want $(want)
	pip uninstall lib

##############################################################################
## TARGETS: clean, pristine
.PHONY: clean pristine
clean: ;
	@rm -Rf build lib.egg-info

pristine: uninstall
