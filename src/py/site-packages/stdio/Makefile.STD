##
## Title-
##       (~/src/py/site-packages/stdio/)Makefile.STD
##
## Purpose-
##       Python build control makefile
##
## Last change date-
##       2023/08/20
##
## Implementation notes-
##       This Makefile is intended to run from ~/obj/py/site-packages/stdio/.
##
##############################################################################

##############################################################################
## Default action
.PHONY: list-options
list-options: ;
	@echo "Available options:"
	@echo "  make install: Builds and installs in Python's site-packages/."
	@echo "    Use this to initialize or update your installation."
	@echo "  make uninstall: Removes installation from Python's site-packages/."
	@echo "  make reinstall: (make uninstall; make install)"
	@echo
	@echo "  make check: Compile and run all test suites."
	@echo "  make compile: Compile all source files."
	@echo
	@echo "  make clean: Removes build 'make install' files from this directory."
	@echo "  make pristine: Runs 'make uninstall' and 'make clean'"
	@echo

##############################################################################
## TARGETS: check, compile, install, reinstall, uninstall
.PHONY: check compile install reinstall uninstall

##----------------------------------------------------------------------------
check: ;
	@echo; echo; echo "No available tests"
	@echo "** check completed OK **"

##----------------------------------------------------------------------------
compile: ;
	python -m build .

##----------------------------------------------------------------------------
install: ;
	python -m pip install .
	@echo "** install completed OK **"

##----------------------------------------------------------------------------
reinstall: uninstall install
	@echo "** reinstall completed OK **"

##----------------------------------------------------------------------------
uninstall: ;
	python -m pip uninstall stdio
	@echo "** uninstall completed OK **"

##############################################################################
## TARGETS: clean, pristine
.PHONY: clean pristine

##----------------------------------------------------------------------------
clean: ;
	-rm -Rf build dist stdio.egg-info >/dev/null 2>/dev/null

##----------------------------------------------------------------------------
pristine: uninstall clean
