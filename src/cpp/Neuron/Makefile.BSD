##############################################################################
## Local module list
MAKOBJ := $(patsubst $(OBJDIR)/Main.o,,$(MAKOBJ))
MAKEXE := Main
LLIBS  += -L. -llocal

##############################################################################
## Set default target
ifeq "" "$(DEFAULT)"
DEFAULT:= make.dir
endif

.PHONY: make.dir
make.dir: $(MAKEXE)

.PHONY: do
do : make.dir
	Main

.PHONY: out
out : make.dir
	Main >out; head -10 <out

##############################################################################
## Controls
include $(INCDIR)/com/Makefile.BSD

##############################################################################
## TARGET: liblocal.a
liblocal.a : $(MAKOBJ)
	ar -r $(@) $(?)

##############################################################################
## Dependencies
Main: liblocal.a

##############################################################################
## Makefile cleanup
clean : clean.dir
.PHONY: clean.dir
clean.dir: ;
	-@rm liblocal.a >/dev/null 2>/dev/null

