##############################################################################
## Local module list
MAKSRC := $(wildcard $(SRCDIR)/*.cpp)
MAKLIB := $(patsubst $(SRCDIR)/%.cpp,$(OBJDIR)/%.o,$(MAKSRC))
MAKLIB := $(patsubst $(OBJDIR)/Edit.o,,$(MAKLIB))
MAKEXE := Edit
LLIBS  += -L. -llocal
CLIBS  += -lncurses

ifeq "CYGWIN" "$(findstring CYGWIN,$(shell uname))"
CLOAD  += -Wl,--enable-auto-import
endif

##############################################################################
## Set default target
ifeq "" "$(DEFAULT)"
DEFAULT:= $(MAKEXE)
endif

.PHONY: default
default: liblocal.a $(DEFAULT)

##############################################################################
## Controls
include $(INCDIR)/com/Makefile.BSD

##############################################################################
## Build: liblocal.a
liblocal.a : $(MAKLIB)
	ar -r $(@) $(MAKLIB)

##############################################################################
## Dependencies
Edit: liblocal.a

##############################################################################
## Target: install
.PHONY: install
install: default
	cp Edit editor
	strip editor
	mv -i editor $(HOME)/bin/editor

##############################################################################
## Makefile cleanup
clean : MAK_clean
.PHONY: MAK_clean
MAK_clean: ;
	-@rm $(MAKEXE)  >/dev/null 2>/dev/null
	-@rm liblocal.a >/dev/null 2>/dev/null

