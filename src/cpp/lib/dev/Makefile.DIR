##############################################################################
## TARGET: prerequisites
PREREQ := $(wildcard $(INCDIR)/dev/*)
PREREQ += $(wildcard $(SRCDIR)/dev/*)

##############################################################################
## TARGET: dev/libdev.a
$(OBJDIR)/dev/libdev.a: $(PREREQ) libpub.a
	(cd $(OBJDIR)/dev/; export MAKRUN=lib; $(MAKE))
	touch $@

libdev.a: $(OBJDIR)/dev/libdev.a
	@echo dev.trace11 ln -s $< $@
	$(shell [ ! -L "$@" ] && ln -s $< $@)

build.bsd.lib: libdev.a

##############################################################################
## TARGET: dev/libdev.so.1.0
$(OBJDIR)/dev/libdev.so.1.0: $(PREREQ) libpub.so
	(cd $(OBJDIR)/dev/; export MAKRUN=dll; $(MAKE))
	touch $@

libdev.so.1.0: $(OBJDIR)/dev/libdev.so.1.0
	@echo dev.trace12 ln -s $< $@
	$(shell [ ! -L "$@" ] && ln -s $< $@)

~/bin/libdev.so.1.0: libdev.so
	cp -Lpf $< $@
	rebase -b 0x250000000 $@
	touch $@

libdev.dll: $(OBJDIR)/dev/libdev.so.1.0
	@echo dev.trace13 ln -s $< $@
	$(shell [ ! -L "$@" ] && ln -s $< $@)

~/bin/libdev.dll: libdev.dll
	cp -Lpf $< $@
	rebase -b 0x250000000 $@
	touch $@

.SECONDARY: libdev.so.1.0 /usr/local/lib/libdev.so.1.0
build.cygwin.dll: libdev.dll libdev.so ~/bin/libdev.so
build.linux.so: libdev.so /usr/local/lib/libdev.so

##############################################################################
## Dependencies
ifeq "CYGWIN" "$(findstring CYGWIN,$(shell uname))"
$(OBJDIR)/dev/libdev.so.1.0: libpub.dll
endif

##############################################################################
## TARGET: libdev.lib [WINDOWS VERSION, OBSOLETE]
$(OBJDIR)/dev/libdev.lib: $(WIN_PREREQ)
	(cd $(OBJDIR)/dev/; $(MAKE))
	touch $@

libdev.lib: $(OBJDIR)/dev/libdev.lib
	cp -Lpf $< $@
	touch $@

build.win.lib: libdev.lib

##############################################################################
## TARGET: dev.depend
.PHONY: dev.depend
depend: dev.depend
dev.depend: ;
	(cd $(OBJDIR)/dev/; $(MAKE) depend)

##############################################################################
## TARGET: dev.update
.PHONY: dev.update
update: dev.update
ifeq "$(MAKRUN)" "build.bsd.lib"
dev.update: ;
	(cd $(OBJDIR)/dev/; export MAKRUN=lib; $(MAKE) update)
else
dev.update: ;
	(cd $(OBJDIR)/dev/; export MAKRUN=dll; $(MAKE) update)
endif

##############################################################################
## Cleanup
.PHONY: dev.pristine
pristine.bsd: dev.pristine
pristine.win: dev.pristine
dev.pristine: ;
	(cd $(OBJDIR)/dev/; $(MAKE) pristine)

.PHONY: dev.clean.bsd
clean.bsd: dev.clean.bsd
dev.clean.bsd: ;
	-@rm -f libdev.a >/dev/null 2>/dev/null
	-@rm -f libdev.so* libdev.dll >/dev/null 2>/dev/null

.PHONY: dev.clean.win
clean.win: dev.clean.win
dev.clean.win: ;
	-@rm -f libdev.lib >/dev/null 2>/dev/null
