##############################################################################

##############################################################################
## Prerequisites
PREREQ := $(wildcard $(INCDIR)/dev/*)
PREREQ += $(wildcard $(SRCDIR)/dev/*)

##############################################################################
## TARGET: dev/libdev.a
$(OBJDIR)/dev/libdev.a: $(PREREQ) libpub.a
	(cd $(OBJDIR)/dev/; $(MAKE))

$(OBJDIR)/libdev.a: $(OBJDIR)/dev/libdev.a
	$(shell [ ! -L "$@" ] && ln -s $< $@)

build.bsd: $(OBJDIR)/libdev.a

##############################################################################
## TARGET: dev/libdev.so.1.0
$(OBJDIR)/dev/libdev.so.1.0: $(PREREQ) libpub.so
	(cd $(OBJDIR)/dev/; $(MAKE))

$(OBJDIR)/libdev.so.1.0: $(OBJDIR)/dev/libdev.so.1.0
	$(shell [ ! -L "$@" ] && ln -s $< $@)

build.bsd: $(OBJDIR)/libdev.so
build.bsd: $(USRLIB)/libdev.so $(USRLIB)/libdev.so.1.0

build.cygwin: $(OBJDIR)/libdev.dll
build.cygwin: $(USRLIB)/libdev.dll

##############################################################################
## TARGET: libdev.lib [WINDOWS VERSION, NOT MAINTAINED]
$(OBJDIR)/dev/libdev.lib: $(PREREQ)
	(cd $(OBJDIR)/dev/; $(MAKE))

libdev.lib: $(OBJDIR)/dev/libdev.lib
	cp -Lpf $< $@
	touch $@

build.win.lib: libdev.lib

##############################################################################
## TARGET: dev.depend
.PHONY: dev.depend
depend: dev.depend
dev.depend: ;
	(cd $(OBJDIR)/dev/; $(MAKE) depend)

##############################################################################
## TARGET: dev.update
.PHONY: dev.update
update: dev.update
dev.update: ;
	(cd $(OBJDIR)/dev/; $(MAKE) update)

##############################################################################
## Cleanup
.PHONY: dev.pristine
pristine: dev.pristine
dev.pristine: ;
	(cd $(OBJDIR)/dev/; $(MAKE) pristine)
	-@rm -f $(USRLIB)/libdev.* >/dev/null 2>/dev/null

.PHONY: dev.clean
clean: dev.clean
dev.clean: ;
	-@rm -f libdev.* >/dev/null 2>/dev/null
