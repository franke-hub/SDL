##############################################################################
##
## Title-
##       Makefile.WIN
##
## Purpose-
##       WINDOWS Makefile versioning
##
## Last change date-
##       2020/01/01
##
## Implementation note-
##       djpeg.exe requires the JPEG library, so it's not built.
##
##############################################################################

##############################################################################
## Local module list
MAKEXE := $(patsubst $(OBJDIR)/WormBuffer.exe,,$(MAKEXE))
MAKEXE := $(patsubst $(OBJDIR)/djpeg.exe,,$(MAKEXE))
MAKOBJ := WormBuffer.obj

################################### Controls
LLIBS  += $(OBJDIR)/local.lib###### Local library
LLIBS  += $(LIBDIR)/libgui.lib##### GUI library
ignore += $(LIBDIR)/libjpeg.lib#### JPEG library
LLIBS  += /FORCE:MULTIPLE########## Allow duplicate entry points
CLIBS  += ## UNKNOWN ############## JPEG library

##############################################################################
## Set default target
ifeq "" "$(DEFAULT)"
DEFAULT:= make.dir
endif

.PHONY: make.dir
make.dir: $(MAKEXE)

.PHONY: make.all
make.all: $(MAKEXE)

all: make.all

##############################################################################
## TARGET: local.lib
local.lib : $(MAKOBJ)
	$(AR) /out:"$(@)" $(MAKOBJ)

##############################################################################
## Dependencies
$(MAKEXE) : $(OBJDIR)/local.lib $(LIBDIR)/libcom.lib $(LIBDIR)/libgui.lib

##############################################################################
## Makefile cleanup
clean : clean.dir
.PHONY: clean.dir
clean.dir: ;
	-@rm -f sample.log >/dev/null 2>/dev/null
	-@rm -f simple.log >/dev/null 2>/dev/null
	-@rm -f local.lib  >/dev/null 2>/dev/null

