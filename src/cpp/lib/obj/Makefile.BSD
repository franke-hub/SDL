## Title-
##       Makefile.BSD
##
## Purpose-
##       CYGWIN/LINUX Makefile customization.
##
## Last change date-
##       2023/12/03
##
##############################################################################

##############################################################################
## Local options (-fPIC, but not on CYGWIN)
ifneq "CYGWIN" "$(findstring CYGWIN,$(shell uname))"
COPTS  += -fPIC ################### Generate position independent code
endif

##############################################################################
## Set targets
ifeq "" "$(MAKRUN)"
MAKRUN := dll
MAKRUN := lib
endif

ifeq "" "$(DEFAULT)"
DEFAULT := $(MAKRUN)
endif

.PHONY: default dll lib all
default: $(DEFAULT)
dll: configure libobj.so.1.0
lib: configure libobj.a
all: dll lib

##############################################################################
## TARGET: configure
.PHONY: configure
configure: ;
	@../../../../bat/sys/configure.sh src/cpp/lib/obj

##############################################################################
## TARGET: update
.PHONY: update
EXISTS := $(shell _exists.sh "libobj.so.1.0")

ifeq "$(MAKRUN)" "lib"
update: default
else ifeq "$(EXISTS)" "true"
update: default
else
update: ;
endif

##############################################################################
## TARGET: libobj.so.1.0, libobj.so, libobj.dll
libobj.so.1.0: $(MAKOBJ)
	$(CC) -shared -o $@ $^ -LL -lcom -lX11
	touch $@

libobj.so: libobj.so.1.0
	$(shell [ ! -L "$@" ] && ln -s $< $@)

libobj.dll: libobj.so.1.0
	$(shell [ ! -L "$@" ] && ln -s $< $@)

##############################################################################
## TARGET: libobj.a
libobj.a: $(MAKOBJ)
	$(AR) $@ $^
	touch $@

##############################################################################
## Dependencies
ifneq "" "$(DEPENDS)"
Makeproj.dep: $(wildcard $(INCDIR)/obj/*)
Makeproj.dep: $(wildcard $(SRCDIR)/*)
Makeproj.dep: $(wildcard $(SRCDIR)/obj/OS/USR/*) ## (non-existent)
Makeproj.dep: $(wildcard $(SRCDIR)/obj/OS/BSD/*) ## (non-existent)
endif

##############################################################################
## Cleanup
.PHONY: obj.clean.bsd obj.pristine.bsd
clean: obj.clean.bsd
obj.clean.bsd: ;
	-@rm libobj.a >/dev/null 2>/dev/null
	-@rm libobj.so* libobj.dll >/dev/null 2>/dev/null

pristine: obj.pristine.bsd
obj.pristine.bsd: ;
	-@rm -f _have.version >/dev/null 2>/dev/null
