##############################################################################
## Local library list (Currently unused.)
LIBOBJ := ######################### CURRENTLY UNUSED
LIBOBJ += Thing.o
MAKEXE := $(patsubst $(OBJDIR)/Thing,,$(MAKEXE))

LLIBS  += -L. -llocal

##############################################################################
## Set default target
ifeq "" "$(DEFAULT)"
DEFAULT:= $(MAKEXE)
endif

.PHONY: default
default: $(DEFAULT)

all: $(MAKEXE)

##############################################################################
## TARGET: liblocal.a
liblocal.a: $(LIBOBJ)
	$(AR) $@ $^
	touch $@

$(MAKEXE): liblocal.a

################################### Add obj controls and dependencies
include $(INCDIR)/obj/Makefile.BSD

##############################################################################
## Run the default program
.PHONY: do
do: Stress
	@Stress

##############################################################################
## Makefile cleanup
clean : clean.dir
.PHONY: clean.dir
clean.dir: ;
	-@rm -f liblocal.a >/dev/null 2>/dev/null

