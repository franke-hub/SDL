##############################################################################
## Local library list
LIBOBJ :=
LIBOBJ += Command.o
MAKEXE := $(patsubst $(OBJDIR)/Command,,$(MAKEXE))
MAKEXE := $(patsubst $(OBJDIR)/Test_constructor,,$(MAKEXE))

LLIBS  += -L. -llocal

##############################################################################
## Set default target
ifeq "" "$(DEFAULT)"
DEFAULT:= $(MAKEXE)
endif

.PHONY: default
default: $(DEFAULT) liblocal.a

##############################################################################
## TARGET: liblocal.a
liblocal.a: $(LIBOBJ)
	$(AR) $@ $^
	touch $@

$(MAKEXE): liblocal.a

##############################################################################
## Library dependencies
$(MAKEXE) : L/libcom.a L/libgui.a

##############################################################################
## External library dependencies
include $(INCDIR)/pub/Makefile.BSD

##############################################################################
## Run the default program
.PHONY: do
do: default
	@Main

##############################################################################
## Drive compile errors (COMPILE FAILS)
.PHONY: error1
error1: Test_constructor

##############################################################################
## Makefile cleanup
clean : clean.dir
.PHONY: clean.dir
clean.dir: ;
	-@rm liblocal.a      >/dev/null 2>/dev/null

