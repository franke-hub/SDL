##############################################################################
## Local module list
MAKEXE :=
MAKOBJ := $(patsubst $(OBJDIR)/Main.o,,$(MAKOBJ))
MAKEXE += Main
MAKOBJ := $(patsubst $(OBJDIR)/Sample.o,,$(MAKOBJ))
MAKEXE += Sample
LLIBS  += -L. -llocal
## MOPTS  += -bmaxdata:0x80000000
## MLIBS  += -L. -llocal ## -bmaxdata:0x80000000

##############################################################################
## Set default target
ifeq "" "$(DEFAULT)"
DEFAULT:= $(MAKEXE)
endif

.PHONY: default
default: $(DEFAULT)

##############################################################################
## Build: liblocal.a
liblocal.a : $(MAKOBJ)
	$(AR) $(@) $(MAKOBJ)

$(MAKEXE) : liblocal.a

##############################################################################
## Makefile cleanup
clean : clean.dir
.PHONY: clean.dir
clean.dir: ;
	-@rm liblocal.a >/dev/null 2>/dev/null

