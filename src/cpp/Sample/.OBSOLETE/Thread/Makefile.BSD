##############################################################################
## Local module list
MAKOBJ := $(patsubst $(OBJDIR)/main.o,,$(MAKOBJ))
MAKOBJ := $(patsubst $(OBJDIR)/sample.o,,$(MAKOBJ))
MAKEXE := main
MAKEXE += sample
LLIBS  += -L. -llocal

##############################################################################
## Set default target
ifeq "" "$(DEFAULT)"
DEFAULT:= $(MAKEXE)
endif

.PHONY: default
default: $(DEFAULT)

##############################################################################
## TARGET: liblocal.a
liblocal.a : $(MAKOBJ)
	$(AR) $(@) $(MAKOBJ)

$(MAKEXE) : liblocal.a

##############################################################################
## Makefile cleanup
clean : clean.dir
.PHONY: clean.dir
clean.dir: ;
	-@rm liblocal.a >/dev/null 2>/dev/null

