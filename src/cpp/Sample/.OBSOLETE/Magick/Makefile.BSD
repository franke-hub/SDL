##############################################################################
## Set options
COPTS   += `Magick++-config --cppflags`
CLIBS   += `Magick++-config --libs`

##############################################################################
## Set defaults
ifeq "" "$(DEFAULT)"
DEFAULT = $(MAKEXE)
endif

.PHONY: default
default: $(DEFAULT)

##############################################################################
## Build: main
main: $(MAKOBJ)
	$(LD) -o $@ $(MAKOBJ) $(CLOAD)

