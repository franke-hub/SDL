##############################################################################
## Local module list
MAKEXE :=
MAKEXE += rdserver
MAKEXE += rdclient
MAKEXE += FSlist

##############################################################################
## Set default target
ifeq "" "$(DEFAULT)"
DEFAULT:= $(MAKEXE)
endif

default: $(DEFAULT)

##############################################################################
## Controls
include $(INCDIR)/com/Makefile.BSD

##############################################################################
## TARGET: RdClient
rdclient: RdClient.o RdCommon.o CommonThread.o ClientThread.o
	$(CC) -o $@ $^ $(CLIBS)

##############################################################################
## TARGET: RdServer
rdserver: RdServer.o RdCommon.o CommonThread.o ListenThread.o ServerThread.o
	$(CC) -o $@ $^ $(CLIBS)

