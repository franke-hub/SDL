##############################################################################
[[ -z "$JAVA_HOME" ]] && ( echo JAVA_HOME not defined; exit 1 )

URL="$@"
if [[ -z "$URL" ]] ; then
  URL=test.html
fi

appletviewer -J-Djava.security.policy=./java.policy "$URL"
