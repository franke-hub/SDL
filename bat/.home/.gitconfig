##
## Title-
##       .gitconfig
##
## Function-
##       GIT user configuration file.
##
## Last change date-
##       2024/01/26
##
## Implementation notes-
##       You really should modify the name and email address.
##
##############################################################################
[user]
	name = Some User
	email = some.user@some-server.email.broken
[alias]
	erase = rm
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	move = mv
	print = cat-file -p
	remove = rm
	rename = mv
[advice]
	detachedHead = false
[core]
	editor = editor
[init]
	defaultBranch = trunk
